profiles {

        conda { process.conda = "$baseDir/environment.yml" }
        docker { 
                docker.enabled = true
                docker.runOptions='-u $(id -u):$(id -g)'
        }
        singularity { 
                singularity.enabled = true
                process.container = 'metoid_ks'
                singularity.engineOptions = '--verbose --debug'
                singularity.cacheDir = '/path/to/tmp' 
        }
